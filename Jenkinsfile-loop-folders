pipeline {
    agent any
    stages {
        stage('Clone sources') {
            steps {
                git url: 'https://github.com/assafshp/git-change.git', branch: 'change-3'
            }
        }
        stage('build') {
            steps {
                script {
                    myf = sh(returnStdout: true, script: 'git diff --dirstat=noncumulative --name-only master| grep  .')
                    String[] myfarr = myf.split()
                    myfl = myfarr.size()
                    List<String> products = []
                    for (int i = 0; i < myfarr.size(); i++) {
                        sh(returnStdout: true, script: "echo ${myfarr[i]}")
                        if (myfarr[i].contains("/")){
                            products.add(myfarr[i].substring(0,myfarr[i].indexOf("/")))
                        }
                    }
                    uniqueProducts = products.unique()
                    for (int t = 0; t < uniqueProducts.size(); t++) {
                        sh(returnStdout: true, script: "echo ${uniqueProducts[t]}")
                        build job: 'triggered-product', parameters: [string(name: 'PRODUCT', value: uniqueProducts[t])]
                    }
                    
                }
            }
        }
    }
}

